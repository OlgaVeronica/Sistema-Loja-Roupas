<UserControl x:Class="LojaRoupa.Views.SubViews.CadastrarFuncionarioUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LojaRoupa.Views.SubViews"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1000">


    <Grid Background="#f1f1f1f1" >


        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>

        <TextBlock Foreground="black" Grid.Row="0" HorizontalAlignment="Center" FontSize="40" Text="Cadastrar Funcionário" />


        <Grid Grid.Row="1" Background="White" HorizontalAlignment="Left" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="*" MaxWidth="500"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10, 0, 10, 0">

                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 23, 0, 10" Background="AliceBlue">
                    <Image x:Name="imgFuncionario" Height="140" Width="140"/>
                </StackPanel>-->

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 10">
                    <Border CornerRadius="20" BorderThickness="1" >
                        <Ellipse Width="140" Height="140" Margin="15">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="imgFuncionario" ImageSource="/Images/avatar.png"  Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </StackPanel>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 0, 0, 10">
                    <Button x:Name="btnEscolherImg" Content="Escolher Imagem" Click="btnEscolherImg_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
                    <Label Content="Nome:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtNome"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="CPF:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtCPF" Cursor="Arrow"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="RG:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtRG"></TextBox>
                </StackPanel>
         




            </StackPanel>




            <StackPanel Grid.Column="1" Margin="10, 0, 10, 0" VerticalAlignment="center">

                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Telefone:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtTelefone"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Sexo:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtSexo"></TextBox>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Email:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtEmail"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Endereco:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtEndereco" Cursor="Arrow"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Funcao:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtFuncao"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
                    <Label Content="Salario:" FontSize="20"/>
                    <TextBox MinWidth="500" FontSize="20" x:Name="txtSalario"></TextBox>
                </StackPanel>




            </StackPanel>

        </Grid>
        <Grid Grid.Row="1">

        </Grid>



        <Button Grid.Row="2" Height="50" Width="150" x:Name="btnCadastrar" Click="btnCadastrar_Click">Cadastrar</Button>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="10,0" Height="50" Width="150" x:Name="btnVoltar" Click="btnVoltar_Click">Voltar</Button>



    </Grid>
</UserControl>
