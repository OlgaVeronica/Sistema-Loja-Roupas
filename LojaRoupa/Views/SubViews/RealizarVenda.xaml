<UserControl x:Class="LojaRoupa.Views.SubViews.RealizarVenda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LojaRoupa.Views.SubViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#efefef">
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Vendas" FontSize="40" TextAlignment="Center"/>

        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="1">
            
            <StackPanel Width="500">
                <TextBlock Text="Produtos" HorizontalAlignment="Center"  FontSize="30"/>
                <DataGrid Grid.Row="1" x:Name="dtgRoupas"  FontSize="20"></DataGrid>
            
            </StackPanel>
            <StackPanel>
                
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2" Height="50" Width="150" x:Name="btnRealizarVenda" Click="btnRealizarVenda_Click">Cadastrar</Button>
    </Grid>
</UserControl>
