<UserControl x:Class="LojaRoupa.Views.SubViews.ConsultarRecebimentoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LojaRoupa.Views.SubViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>

            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".3*"/>

        </Grid.RowDefinitions>

        <TextBlock Foreground="black" Grid.Row="0" HorizontalAlignment="Center" FontSize="40" Text="Consultar Recebimento" />

        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="120, 0, 120, 10">
                <Label Content="Data do recebimento" FontSize="20" HorizontalAlignment="Center"/>
                <TextBox MinWidth="500" FontSize="20" Width="30" x:Name="txtDataRecebimento"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Background="White" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="900"/>
                <ColumnDefinition Width="*" MaxWidth="900"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Vertical" Margin="0, 30, 0, 10">
                    <Label Content="Valor recebimento" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBox MinWidth="500" IsReadOnly="True" FontSize="20" x:Name="txtValorRecebimento" Cursor="Arrow"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10, 0, 10, 0"  HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,30, 0, 10">
                    <Label Content="Hora de recebimento" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBox MinWidth="500" IsReadOnly="True" FontSize="20" x:Name="txtHoraRecebimento"></TextBox>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Background="White">
            <Label Content="Forma do recebimento" Margin="295,10,0,50" FontSize="20" HorizontalAlignment="Left"/>
            <TextBox MinWidth="500" Margin="150,0,150,80" Width="50" IsReadOnly="True" FontSize="20" x:Name="txtHoraAbertura" Cursor="Arrow" Grid.ColumnSpan="2"></TextBox>
        </Grid>
        <Button Grid.Row="0" HorizontalAlignment="Left" Margin="40 ,0" x:Name="btnVoltar" Height="50" Width="140" Click="btnVoltar_Click" Cursor="Hand">Voltar</Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" Margin="50 ,0" Height="50" Width="140" x:Name="btnBuscar" Cursor="Hand" Click="btnBuscar_Click">Consultar</Button>
    </Grid>
</UserControl>
   