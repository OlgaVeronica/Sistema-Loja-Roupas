<UserControl x:Class="LojaRoupa.Views.SubViews.ConsultarRecebimentoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LojaRoupa.Views.SubViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>

            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".3*"/>

        </Grid.RowDefinitions>

        <TextBlock Foreground="black" Grid.Row="0" HorizontalAlignment="Center" FontSize="40" Text="Consultar Recebimento" />

        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="120, 0, 120, 10">
                <Label Content="Data do recebimento" FontSize="20" HorizontalAlignment="Center"/>
                <TextBox MinWidth="500" FontSize="20" Width="30" x:Name="txtDataRecebimento"></TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="*" MaxWidth="500"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10, 0, 10, 0">
                <StackPanel Orientation="Vertical" Margin="0, 10, 0, 10">
                    <Label Content="Valor recebimento" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBox MinWidth="500" IsReadOnly="True" FontSize="20" x:Name="txtValorRecebimento" Cursor="Arrow"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10, 0, 10, 0">
                <StackPanel Orientation="Vertical" Margin="0, 10, 0, 10">
                    <Label Content="Hora de recebimento" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBox MinWidth="500" IsReadOnly="True" FontSize="20" x:Name="txtHoraRecebimento"></TextBox>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Background="White">
            <Label Content="Forma do recebimento" Margin="0,10,0,50" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox MinWidth="500" Margin="0,0,0,40" Width="50" IsReadOnly="True" FontSize="20" x:Name="txtHoraAbertura" Cursor="Arrow"></TextBox>
        </Grid>
        
    </Grid>
</UserControl>
