<UserControl x:Class="LojaRoupa.Views.FornecedorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LojaRoupa.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="RosyBrown">
            <Grid.RowDefinitions>
                <RowDefinition Height=".3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height=".3*"/>
            </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="40" TextAlignment="Center" Foreground="Black" Text="Fornecedores"/>



        <DataGrid Grid.Row="1" x:Name="dtgFornecedores"  FontSize="20"></DataGrid>

               
                    
         <Button Grid.Row="2" Height="50" Width="150" x:Name="btnCadastrarFornecedor" Cursor="Hand" Click="btnCadastrarFornecedor_Click">Cadastrar</Button>
    </Grid>
</UserControl>
